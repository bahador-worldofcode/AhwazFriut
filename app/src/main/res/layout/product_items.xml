<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


    <ImageButton
        android:id="@+id/image_icon_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add_beside_image"
        android:background="@drawable/add_icon_shape"
        android:layout_toLeftOf="@+id/product_image"
        android:layout_marginTop="8dp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/product_image"
        android:layout_below="@+id/image_icon_add"
        android:layout_marginTop="8dp"
        >






    </RelativeLayout>


    <ImageView
        android:id="@+id/product_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/bannana"
        android:layout_centerHorizontal="true"

        />


    <TextView
        android:id="@+id/product_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_bannana"
        android:layout_below="@+id/product_image"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:fontFamily="@font/roya"
        android:textSize="18sp"
        />


    <TextView
        android:id="@+id/price_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_product"
        android:layout_below="@+id/product_txt"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:fontFamily="@font/roya"
        android:textSize="16sp"
        />









</RelativeLayout>